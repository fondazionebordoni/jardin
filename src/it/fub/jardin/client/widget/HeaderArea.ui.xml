<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:jardin='urn:import:it.fub.jardin.client.widget'>
  
  <ui:style field="tabpanel" src='TabLayoutPanel.css'/> 
	
	<ui:style>
		.toolbar {
			text-align: right;
			font-size: 11px;
			line-height: 20px;
		}
		
		.links, .links a {
			text-align: right;
			padding: 0 0 0 2em;
      color: white;
			text-decoration: none;
		}
		
		.links a:hover {
		  color: #b8cfee;
		}
		
		.logo {
			float: left;
			width: 200;
			font-size: 16px;
			line-height: 20px;
		}
		
		.header {
			background: #555753;
			color: white;
			padding: 0 1em;
		}
	</ui:style>

	<g:HTMLPanel>
		<div class="{style.header}">
			<div class='{style.logo}'>
				<b>JARDiN</b>Manager
			</div>

			<div class="{style.toolbar}">
				<div class='{style.links}'>
					<span ui:field='username' />
					<g:Anchor href='javascript:;' ui:field='about'>Info</g:Anchor>
					<g:Anchor href='javascript:;' ui:field='help'>Aiuto</g:Anchor>
					<g:Anchor href='javascript:;' ui:field='faq'>FAQ</g:Anchor>
					<g:Anchor href='javascript:;' ui:field='calculator'>Calcolatrice</g:Anchor>
					<g:Anchor href='javascript:;' ui:field='calendar'>Calendario</g:Anchor>
					<g:Anchor href='javascript:;' ui:field='settings'>Impostazioni</g:Anchor>
					<g:Anchor href='javascript:;' ui:field='exit'>Uscita</g:Anchor>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>