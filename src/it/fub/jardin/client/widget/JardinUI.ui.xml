<?xml version="1.0" encoding="UTF-8"?>

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:jardin='urn:import:it.fub.jardin.client.widget'>

	<ui:style>
		.header {
			background: #555753;
			padding-top: 2em;
		}
	</ui:style>

	<g:DockLayoutPanel unit='EM'>
		<g:north size='3'>
			<jardin:HeaderArea ui:field='header'/>
		</g:north>

		<g:center>
			<g:TabLayoutPanel barUnit='EM' barHeight='1'>
				<g:tab>
					<g:header size='70'>
						<b>HTML </b>
						header
					</g:header>

					<g:SplitLayoutPanel>
						<g:west size='260'>
							<!-- <g:Label>Search</g:Label> -->
							<jardin:SearchAreaAdvanced ui:field='advancedsearch' />
						</g:west>

						<g:center>
							<g:Label>Grid</g:Label>
							<!-- <jardin:JardinGrid ui:field='grid' /> -->
						</g:center>

						<g:east size='260'>
							<!-- <g:Label>Detail</g:Label> -->
							<jardin:JardinDetail ui:field='detail' />
						</g:east>

					</g:SplitLayoutPanel>
				</g:tab>
			</g:TabLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder>
