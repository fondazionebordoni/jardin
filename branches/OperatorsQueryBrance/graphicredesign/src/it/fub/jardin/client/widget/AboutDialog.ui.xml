<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:image field='logo' src='logo.png' />

	<ui:style>
		.panel {
			padding: 10px;
		}
		
		.text {
			text-align: left;
			margin-left: 80px;
		}
		
		@sprite .logo {
			gwt-image: 'logo';
			float: left;
		}
		
		.buttons {
			text-align: center;
		}
	</ui:style>

	<g:HTMLPanel width='30em' styleName='{style.panel}'>
		<div class='{style.logo}' />

		<div class='{style.text}'>
			<p>
				<b>
					Fondazione Ugo Bordoni
					<br />
					JARDiN Manager
					<br />
				</b>
				Versione 0.9.7.3
			</p>
			<p>JARDiN is a Java/AJAX Web Application made for database management.<br/>
			It's built on GWT and Ext GWT libraries.</p>
		</div>

		<div class='{style.buttons}'>
			<g:Button text='OK' ui:field='close' />
		</div>
	</g:HTMLPanel>
</ui:UiBinder>
